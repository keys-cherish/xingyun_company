# Telegram机器人Token
BOT_TOKEN=你的bot_token

# 代理（如果在国内需要）
PROXY_URL=

# 运行模式：polling / webhook
RUN_MODE=polling
USE_UVLOOP=true
APP_TIMEZONE=Asia/Shanghai
# Webhook 配置（RUN_MODE=webhook 时必填 BASE_URL）
WEBHOOK_BASE_URL=
WEBHOOK_PATH=/telegram/webhook
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_SECRET_TOKEN=

# 允许使用游戏命令的群组/子频道ID（逗号分隔，为空则允许所有群组）
ALLOWED_CHAT_IDS=
# 允许使用游戏命令的群组用户名（逗号分隔，不带@）
# 示例：ALLOWED_CHAT_USERNAMES=Anyincubation
ALLOWED_CHAT_USERNAMES=
# 允许使用游戏命令的话题ID（逗号分隔；论坛群建议配置）
# 示例：ALLOWED_TOPIC_THREAD_IDS=18833
ALLOWED_TOPIC_THREAD_IDS=
# 兼容旧配置：单个话题ID（0/空表示不限制）
ALLOWED_TOPIC_THREAD_ID=0

# 管理员TG用户ID（逗号分隔，必填）
ADMIN_TG_IDS=
# 超级管理员TG用户ID（高危命令专用）
SUPER_ADMIN_TG_ID=
# 多超级管理员（逗号分隔）。填写后可覆盖单一超管模式。
SUPER_ADMIN_TG_IDS=

# 管理员认证密钥（必填，用于 /company_admin 命令认证）
ADMIN_SECRET_KEY=

# 数据库（PostgreSQL推荐用于生产，SQLite用于开发）
# PostgreSQL(容器内): postgresql+asyncpg://用户名:密码@postgres:5432/数据库名
# SQLite: sqlite+aiosqlite:///my_company.db
DATABASE_URL=postgresql+asyncpg://mycompany:mycompany@postgres:5432/mycompany
POSTGRES_DB=mycompany
POSTGRES_USER=mycompany
POSTGRES_PASSWORD=mycompany

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_STREAM_ENABLED=true
REDIS_STREAM_KEY=my_company:events
REDIS_STREAM_MAXLEN=20000

# ---- 游戏参数 ----
INITIAL_TRAFFIC=100000
COMPANY_CREATION_COST=50000

# 股东系统
MIN_OWNER_SHARE_PCT=30

# 税务/薪资
TAX_RATE=0.05
SOCIAL_INSURANCE_RATE=0.02
EMPLOYEE_SALARY_BASE=50
BASE_EMPLOYEE_LIMIT=5
EMPLOYEE_LIMIT_PER_LEVEL=3

# 分红
DIVIDEND_PCT=0.80
DAILY_OPERATING_COST_PCT=0.05

# 科研
BASE_RESEARCH_COST=1000
BASE_RESEARCH_SECONDS=3600

# 产品
PRODUCT_CREATE_COST=500
PRODUCT_UPGRADE_COST_BASE=300

# 路演
ROADSHOW_COST=800
ROADSHOW_COOLDOWN_SECONDS=7200

# 声望Buff
MAX_REPUTATION_BUFF_PCT=0.50
REPUTATION_PER_RESEARCH=5
REPUTATION_PER_COOPERATION=10
REPUTATION_PER_DIVIDEND=3

# 每日结算时间（北京时间，APP_TIMEZONE=Asia/Shanghai）
SETTLEMENT_HOUR=0
SETTLEMENT_MINUTE=0

# 自动备份（my_company 专用，文件写入项目根目录）
BACKUP_ENABLED=true
# 固定策略：每3小时整点备份（00/03/06/09/12/15/18/21）
BACKUP_INTERVAL_MINUTES=180
BACKUP_KEEP_FILES=72
BACKUP_NOTIFY_SUPER_ADMIN=true

# 随机事件
EVENT_CHANCE=0.35

# AI API（用于AI研发评审功能）
AI_API_KEY=
AI_API_BASE_URL=
AI_MODEL=

# 流量来源接口（预置参数，后续接入外部API）
TRAFFIC_API_URL=
TRAFFIC_API_KEY=
TRAFFIC_TOTAL_POOL=10000000
TRAFFIC_DAILY_DISTRIBUTION=100000
TRAFFIC_EXCHANGE_RATE=1.0
